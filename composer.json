{
    "name"       : "marmotz/wallirc",
    "description": "A modulable irc bot.",
    "license": "GPL",
    "authors": [
        {
            "name" : "marmotz",
            "email": "rlittolff@gmail.com"
        }
    ],
    "require": {
        "hoa/irc"      : "~0.0",
        "symfony/yaml" : "3.0.*@dev"
    },
    "require-dev": {
        "atoum/atoum"                : "~1.1",
        "atoum/visibility-extension" : "~1.0",
        "marmotz/dumper"             : "dev-master",
        "fzaninotto/faker"           : "1.*"
    },
    "autoload": {
        "psr-4": {
            "Marmotz\\WallIrc\\"               : "src",
            "Marmotz\\WallIrc\\tests\\units\\" : "tests/units"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [
        "bin/wallirc"
    ]
}
